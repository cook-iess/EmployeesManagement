@model EmployeesManagement.Models.SystemProfile

@{
    ViewData["Title"] = "Create";
}

<h1>Create New System Profile</h1>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Order" class="form-label"></label>
                        <input asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 col-md-12">
                    <label asp-for="ProfileId" class="control-label"></label>
                    <select asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId">
                        <option value="" style="color: dimgray">Select System Profile</option>
                    </select>
                    <span asp-validation-for="ProfileId" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <div class="mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Save System Profile
                </button> | 
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}