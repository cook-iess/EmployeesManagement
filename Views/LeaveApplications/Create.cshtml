@model EmployeesManagement.Models.LeaveApplication

@{
    ViewData["Title"] = "New Leave Application";
}

<h1>Create New Leave Application</h1>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label"></label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NoOfDays" class="form-label"></label>
                        <input asp-for="NoOfDays" class="form-control" />
                        <span asp-validation-for="NoOfDays" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DurationId" class="form-label"></label>
                        <select asp-for="DurationId" class="form-control" asp-items="ViewBag.DurationId"></select>
                        <span asp-validation-for="DurationId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LeaveTypeId" class="form-label"></label>
                        <select asp-for="LeaveTypeId" class="form-control" asp-items="ViewBag.LeaveTypeId"></select>
                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Attachment" class="form-label"></label>
                        <input asp-for="Attachment" class="form-control" />
                        <span asp-validation-for="Attachment" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />

            <div class="mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Save Leave Application
                </button> | 
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}